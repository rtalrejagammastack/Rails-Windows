<div class="col-lg-12">
    <%= flash[:notice] %>
    <div class="card mt-5 mb-5 rounded-0">
        <div class="card-body">
            <h2 class="text-center">Listing Employee Documents</h2>
        </div>
    </div>

    <%= link_to "New Document",new_document_path, class: "btn btn-primary btn-lg mb-4 rounded-0" %>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Doc Type</th>
                <th>Employee</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @documents.each do |document| %>
                <tr>
                    <td><%= document.name %> </td>
                    <td><%= document.doc_type %></td>
                    <td><%= document.employee.name %></td>
                    <td>
                        <%= link_to "Edit",edit_document_path(document),class:"btn btn-primary" %>
                        <%= link_to "View",document_path(document),class:"btn btn-info" %>
                        <%= link_to "Destroy",employee_path(document), method: :delete,class:"btn btn-danger", data: {
                            confirm: 'Are you sure to delete this document?'
                        } %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>