<br><br>
<%= form_with model: @user do |form| %>
    <div>
        <%= form.label :name %><br><br>
        <%= form.text_field :name %><br><br>
        <% @user.errors.full_messages_for(:name).each do |message| %>
            <div> <%= message %> </div>
        <% end %>
    </div>
    <div>
        <%= form.submit "Create User" %>
    </div>
<% end %>